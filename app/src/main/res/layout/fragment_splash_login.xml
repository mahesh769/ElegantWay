<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/onboarding_in_4"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.elegantway.fragments.WelcomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_trusted"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trusted_member_profile_with"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/ht_check"
            />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify_contact_details"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/ht_check"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"

        android:orientation="vertical"
        tools:ignore="UselessParent"

        >

        <Button
            android:id="@+id/mLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login_fb"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:drawableLeft="@mipmap/ic_login_fb"
            android:drawablePadding="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:background="@color/colorAccent"

            />


    </LinearLayout>

</LinearLayout>
